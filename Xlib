-- Xlib.lua

-- Define the main UI window
local Xlib = {}

function Xlib:new()
    local newObj = {
        bars = {} -- Table to hold bars
    }
    self.__index = self
    return setmetatable(newObj, self)
end

function Xlib:setWindowName(newName)
    game:GetService("GuiService"):FindMenu("Xlib"):SetTitle(newName)
end

function Xlib:createBar(barName)
    local newBar = {
        name = barName,
        subBars = {} -- Table to hold sub-bars
    }
    table.insert(self.bars, newBar)
    return newBar
end

function Xlib:addSubBar(bar, subBarName)
    local newSubBar = {
        name = subBarName
    }
    table.insert(bar.subBars, newSubBar)
    return newSubBar
end

return Xlib
