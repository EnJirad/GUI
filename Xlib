-- เพิ่มฟังก์ชันสำหรับการเพิ่ม Toggle ในแถบ UI

local Xlib = {}

function Xlib:MakeWindow(config)
    local window = {
        Name = config.Name,
        Tabs = {},
    }
    
    function window:MakeTab(tabConfig)
        local tab = {
            Name = tabConfig.Name,
            Toggles = {},
        }
        
        function tab:AddToggle(toggleConfig)
            local toggle = {
                Name = toggleConfig.Name,
                Default = toggleConfig.Default,
                Callback = toggleConfig.Callback,
            }
            
            table.insert(tab.Toggles, toggle)
        end
        
        table.insert(window.Tabs, tab)
        return tab
    end
    
    return window
end

return Xlib
