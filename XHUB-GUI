local Screen = Instance.new("ScreenGui")
Screen.Parent = game.Players.LocalPlayer.PlayerGui

local Window = Instance.new("Frame", Screen)
Window.Parent = Screen
Window.BorderSizePixel = 0
Window.BackgroundColor3 = Color3.fromRGB(85, 85, 127)
Window.Position = UDim2.new(0.5, -250, 0.5, -160)
Window.Size = UDim2.new(0, 500, 0, 320)
Window.Active = true



Container = Instance.new("ScrollingFrame", Window)
Container.Size = UDim2.new(1, 0, 0.85, 0)
Container.Position = UDim2.new(0, 0, 0.15, 0)
Container.BackgroundColor3 = Color3.fromRGB(10, 150, 200)
Container.BorderSizePixel = 0


Title  = Instance.new("TextLabel", Window)
Title.Size = UDim2.new(1, 0, 0.15, 0)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "Lol i dont like FE fak you. Made by goldengabe."

CloseBTN = Instance.new("TextButton", Window)
CloseBTN.Text = "X"
CloseBTN.Size = UDim2.new(0.1, 0, 0.1, 0)
CloseBTN.BorderSizePixel = 0
CloseBTN.Position = UDim2.new(1, -CloseBTN.Size.X.Offset, 0, 0)

CloseBTN.MouseButton1Down:Connect(function()
    Window.Visible = false
end)

local function UpdateWindowSize()
    local screenSize = Screen:GetGuiObjectSize()
    Window.Size = UDim2.new(0, screenSize.X * 0.5, 0, screenSize.Y * 0.3)
    Window.Position = UDim2.new(0.5, -Window.Size.X.Offset * 0.5, 0.5, -Window.Size.Y.Offset * 0.5)
end
UpdateWindowSize()
game.Players.LocalPlayer.PlayerGui.ScreenResolutionChanged:Connect(UpdateWindowSize)
